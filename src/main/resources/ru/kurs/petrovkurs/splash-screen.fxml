<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ru.kurs.petrovkurs.controller.SplashScreenController"
           style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #34495e);">

    <!-- Основной контент -->
    <VBox fx:id="mainContent" alignment="CENTER" spacing="20"
          style="-fx-padding: 40; -fx-opacity: 0;">

        <!-- Логотип и заголовок -->
        <VBox alignment="CENTER" spacing="15">
            <Label text="⚙️" style="-fx-font-size: 72; -fx-text-fill: white;"/>

            <VBox alignment="CENTER" spacing="5">
                <Label text="ТО Машин"
                       style="-fx-font-size: 36; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label text="Система управления техническим обслуживанием"
                       style="-fx-font-size: 14; -fx-text-fill: #bdc3c7;"/>
            </VBox>
        </VBox>

        <!-- Прогресс бар -->
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 30 0;">
            <ProgressBar fx:id="progressBar" progress="0"
                         prefWidth="300" prefHeight="12"
                         style="-fx-accent: #3498db;
                               -fx-background-color: #2c3e50;
                               -fx-border-color: #3498db;
                               -fx-border-radius: 6;
                               -fx-background-radius: 6;"/>

            <HBox spacing="15" alignment="CENTER">
                <Label fx:id="progressLabel" text="0%"
                       style="-fx-font-size: 14; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="statusLabel" text="Инициализация приложения..."
                       style="-fx-font-size: 12; -fx-text-fill: #95a5a6;"/>
            </HBox>
        </VBox>

        <!-- Информационная строка -->
        <Label text="Пожалуйста, подождите..."
               style="-fx-font-size: 11; -fx-text-fill: #7f8c8d;"/>

    </VBox>

    <!-- Версия -->
    <Label fx:id="versionLabel" text="Версия 1.0.0"
           style="-fx-font-size: 10; -fx-text-fill: #7f8c8d;"
           StackPane.alignment="BOTTOM_RIGHT">
        <StackPane.margin>
            <Insets bottom="10" right="10"/>
        </StackPane.margin>
    </Label>

</StackPane>